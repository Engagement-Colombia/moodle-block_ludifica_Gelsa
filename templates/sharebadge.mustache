{{!
    @template block_ludifica/sharebadge

    This template renders the template content for share a badge.

    Example context (json):
    {
        "networks": [ {
            "url": "https://network.url",
            "icon": "icontype",
            "iconsource": "core",
            "name": "Network name"
        }],
        "thumbnailurl": "https://thumbnail.badge.url",
        "badge":{
            "name": "Bagde name",
            "url": "https://badge.local.url"
        }
    }
}}

{{#badge}}
<h5>{{name}}</h5>
<img src="{{thumbnailurl}}" alt="{{name}}">
<div class="card-body">
    <div class="list-group">
        <div class="list-group-item">
            {{#networks}}
            <a href="{{url}}" target="_blank">
                <i class="fa fa-lg fa-{{icon}}" title="{{name}}"></i>
            </a>
            {{/networks}}
        </div>
    </div>
    <div class="list-group">
        <div class="list-group-item d-flex">
            <div class="input-container">
                <div class="input-group">
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="fa fa-link"></i>
                        </span>
                    </div>
                    <input type="text" name="badgelink" aria-label="badge link" value="{{url}}">
                </div>
            </div>
        </div>
    </div>
</div>
{{/badge}}